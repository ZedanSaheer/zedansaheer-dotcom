---
import Coding from "@assets/home/Coding.astro";
---

<style>
  .fade-up-letters {
    display: inline-block;
    animation: fadeOut 3s;
    -webkit-animation: fadeOut 3s;
    -moz-animation: fadeOut 3s;
    -o-animation: fadeOut 3s;
    -ms-animation: fadeOut 3s;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    transition: fadeOut 1s ease-out;
  }

  .move-right {
    display: inline-block;
    animation: moveToRight 1.5s;
    -webkit-animation: moveToRight 1.5s;
    -moz-animation: moveToRight 1.5s;
    -o-animation: moveToRight 1.5s;
    -ms-animation: moveToRight 1.5s;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    animation-delay: 1s;
    transition: moveToRight 1s ease-in-out;
  }
  .move-left {
    display: inline-block;
    animation: moveToLeft 1.5s;
    -webkit-animation: moveToLeft 1.5s;
    -moz-animation: moveToLeft 1.5s;
    -o-animation: moveToLeft 1.5s;
    -ms-animation: moveToLeft 1.5s;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    animation-delay: 1s;
    transition: moveToLeft 1s cubic-bezier(0.17, 0.67, 0.83, 0.67);
  }
  .curtain::before {
    content: "";
    position: absolute;
    z-index: -1;
    top: 0%;
    bottom: 10%;
    width: 150%;
    left: -25%;
    background: var(--landing-gradient-light);
    background-position:;
    -webkit-mask-image: var(--landing-radial-mask);
    mask-image: var(--landing-radial-mask);
  }

  @media (max-width: 639px) {
    .curtain::before {
      top: 0%;
      bottom: 0%;
      height: 80%;
      width: 150%;
      left: -55%;
    }
  }
  @media (prefers-color-scheme: dark) {
    .curtain::before {
      background: var(--landing-gradient-dark);
    }
  }

  .curtain {
    animation: curtainUp 1.5s;
    -webkit-animation: curtainUp 1.5s;
    -moz-animation: curtainUp 1.5s;
    -o-animation: curtainUp 1.5s;
    -ms-animation: curtainUp 1.5s;
    -webkit-animation-fill-mode: forwards;
    animation-fill-mode: forwards;
    animation-delay: 2.5s;
    transition: curtainUp 1s cubic-bezier(0.17, 0.67, 0.83, 0.67);
  }

  .letter-1 {
    animation-delay: 0.1s;
  }
  .letter-2 {
    animation-delay: 0.2s;
  }
  .letter-3 {
    animation-delay: 0.3s;
  }
  .letter-4 {
    animation-delay: 0.4s;
  }
  .letter-5 {
    animation-delay: 0.5s;
  }
  .letter-6 {
    animation-delay: 0.6s;
  }
  .letter-7 {
    animation-delay: 0.7s;
  }
  .letter-8 {
    animation-delay: 0.8s;
  }
  .letter-9 {
    animation-delay: 0.9s;
  }

  @keyframes curtainUp {
    0% {
      transform: translateY(0%);
    }
    100% {
      transform: translateY(-200%);
    }
  }
  @-webkit-keyframes curtainUp {
    0% {
      transform: translateY(0%);
    }
    100% {
      transform: translateY(-200%);
    }
  }
  @-moz-keyframes curtainUp {
