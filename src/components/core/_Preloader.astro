    100% {
      transform: translateY(-200%);
    }
  }
  @-ms-keyframes curtainUp {
    0% {
      transform: translateY(0%);
    }
    100% {
      transform: translateY(-200%);
    }
  }
  @keyframes moveToRight {
    0% {
      opacity: 1;
    }
    100% {
      transform: translateX(260px);
    }
  }
  @-webkit-keyframes moveToRight {
