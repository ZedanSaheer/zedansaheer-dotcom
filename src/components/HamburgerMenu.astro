<style>
  /* Base styles for Menu container */

  .menu_wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 1.5px solid theme(colors.black.100);
    position: relative;
  }

  .menu_container {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    cursor: pointer;
    position: absolute;
    background-image: radial-gradient(
      theme(colors.white.100),
      theme(colors.white.100)
    );
    transition: all 0.6s;
  }

  .menu_wrapper ul {
    display: none;
  }

  /* Base styles for Hamburger menu */

  .top,
  .middle,
  .bottom {
    background-color: theme(colors.black.100);
    height: 1.5px;
    transition: all 0.3s;
    z-index: 2;
  }

  .top,
  .bottom {
    width: 50px;
  }

  .middle {
    width: 35px;
    margin: 10px 0;
    transform: translateX(20%);
  }

  /* Active styles for menu container */

  .menu_wrapper.active > .menu_container {
    background-image: radial-gradient(
      theme(colors.white.100),
      theme(colors.black.100)
    );
    transform: scale(80);
  }
  .menu_wrapper.active > .middle {
    display: none;
  }
  .menu_wrapper.active > .bottom {
    transform: rotate(45deg);
    margin-top: 5px;
  }
  .menu_wrapper.active > .bottom,
  .menu_wrapper.active > .top {
    transition: all 0.3s;
    background-color: theme(colors.black.100);
  }
  .menu_wrapper.active > .top {
    transform: rotate(-45deg);
    margin-bottom: -5px;
  }
  .menu_wrapper.active ul {
    position: fixed;
    left: 30%;
    top: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 4;
    user-select: none;
    cursor: pointer;
  }

  .menu_wrapper.active li {
    font-size: 6rem;
    margin: 1rem 0;
    font-family: "Clash Display";
    color: theme(colors.black.50);
    font-weight: bold;
    border-bottom: 1px solid black;
  }

  .menu_wrapper.active li:hover {
    color: theme(colors.black.100);
  }

  /* Responsive styles for hamburger menu */

  @media (max-width: 639px) {
    .menu_wrapper {
      width: 60px;
      height: 60px;
    }
    .menu_container {
      width: 40px;
      height: 40px;
    }
    .top,
    .bottom {
      width: 30px;
    }

    .middle {
      width: 15px;
    }
    .middle {
      margin: 6px 0;
    }
    .menu_wrapper.active li {
      font-size: 3rem;
    }
  }

  /* Dark mode color settings */

  @media (prefers-color-scheme: dark) {
    .menu_wrapper {
      border: 1.5px solid theme(colors.white.100);
    }
    .menu_container {
      background-image: radial-gradient(
        theme(colors.black.100),
        theme(colors.black.100)
      );
    }
    .top,
    .middle,
    .bottom {
      background-color: theme(colors.white.100);
    }
    .menu_wrapper.active > .menu_container {
      background-image: radial-gradient(
        theme(colors.black.100),
        theme(colors.white.100)
        
      );
    }
    .menu_wrapper {
      border: 1.5px solid theme(colors.white.100);
    }
    .menu_wrapper.active li {
      color: theme(colors.white.50);
      border-bottom: 1px solid theme(colors.white.100);
    }

    .menu_wrapper.active li:hover {
      color: theme(colors.white.100);
    }
    .menu_wrapper.active > .bottom,
    .menu_wrapper.active > .top {
      background-color: theme(colors.white.100);
    }
  }
</style>

<div class="menu_wrapper no-select">
  <div class="top"></div>
  <div class="middle"></div>
  <div class="bottom"></div>
  <div class="menu_container no-select"></div>
  <ul>
    <li class="animate-fade-up animate-duration-[1000ms] animate-delay-200">
      <a href="/"> Home</a>
    </li>
    <li class="animate-fade-up animate-duration-[1000ms] animate-delay-200">
      <a href="/blogs"> Blogs</a>
    </li>
    <li class="animate-fade-up animate-duration-[1000ms] animate-delay-200">
      <a href="/about"> About</a>
    </li>
  </ul>
  <script>
    const wrapper = document.querySelector(".menu_wrapper");
    const classlist = wrapper?.classList;

    // Execute the humburger menu logic
    wrapper?.addEventListener("click", () => {
      if (classlist?.contains("active")) {
        classlist.remove("active");
      } else {
        wrapper.classList.add("active");
      }
    });
  </script>
</div>
