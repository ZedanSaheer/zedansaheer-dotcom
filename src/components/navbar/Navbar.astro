---
import HamburgerMenu from "@components/navbar/HamburgerMenu.astro";
import Logo from "./Logo.astro";
import OffScreenCanvas from "@components/navbar/OffScreenCanvas.astro";
---

<OffScreenCanvas />
<style>
  /* Scrolling navbar styles */

  header {
    transition: top 0.4s;
  }

  .scroll-mode {
    top: 0px !important;
    left: 0 !important;
    border: 1px solid var(--primary_black);
    background-color: var(--white40);
    backdrop-filter: blur(10px);
    transition: top 0.4s;
  }

  .scroll-mode > .menu_wrapper {
    border-left: 1px solid var(--primary_black);
    border-right: 1px solid var(--primary_black);
  }

  .menu_active,
  .menu_active .menu_wrapper {
    border: none !important;
  }

  @media (max-width: 639px) {
    .scroll-mode {
      border-top: 1px solid var(--primary_black);
      border-bottom: 1px solid var(--primary_black);
      padding: 0px 10px !important;
    }
  }

  @media (prefers-color-scheme: dark) {
    .scroll-mode {
      background-color: var(--black40);
      border-top: 1px solid var(--primary_white);
      border-bottom: 1px solid var(--primary_white);
      padding: 0px 20px !important;
    }

    .scroll-mode > .menu_wrapper {
      border-left: 1px solid var(--primary_white);
      border-right: 1px solid var(--primary_white);
    }
  }
</style>
<header
  class="flex justify-between items-center w-screen fixed top-10 left-0 py-4 px-20 sm:px-6 z-10"
>
  <a href="/" class="z-10 select-none no-select flex-1 animate-fade-right">
    <Logo color_scheme="fill-black-100 dark:fill-white-100" />
  </a>
  <HamburgerMenu />
</header>
